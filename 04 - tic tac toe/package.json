{
  "name": "tic-tac-toe",
  "version": "2.0.0",
  "description": "Modern Tic-Tac-Toe game implementation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx index.ts",
    "test": "jest --verbose --coverage",
    "cucumber": "cucumber-js --require-module tsx --import \"features/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "author": "@ivaneroshkin",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
